<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textLight"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/largeDimen">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/imageView"
                android:background="@android:color/white"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="3:2"
                android:contentDescription="@null"/>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/largeDimen"
                android:id="@+id/detailContainer"
                android:background="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="@color/textDark"
                        android:id="@+id/nameTV"/>

                <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nameTV"
                        android:visibility="gone"
                        android:id="@+id/starsRatingBar"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="4.5"
                        android:layout_marginTop="@dimen/smallDimen"
                        style="?android:attr/ratingBarStyleSmall"
                        android:theme="@style/RatingBar"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/mediumDimen"
                        android:textColor="@color/altSecondary"
                        android:layout_alignTop="@+id/starsRatingBar"
                        android:layout_alignBottom="@+id/starsRatingBar"
                        android:gravity="center_vertical"
                        android:layout_toEndOf="@+id/starsRatingBar"
                        android:id="@+id/seeReviewsTV"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:layout_marginTop="@dimen/mediumDimen"
                        android:textColor="@color/colorPrimary"
                        android:layout_below="@+id/starsRatingBar"
                        android:id="@+id/priceTV"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_below="@+id/priceTV"
                        android:textColor="@color/darkGrey"
                        android:id="@+id/listPriceTV"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginStart="@dimen/mediumDimen"
                        android:layout_below="@+id/priceTV"
                        android:layout_toEndOf="@+id/listPriceTV"
                        android:textColor="@color/altPrimary"
                        android:id="@+id/discountTV"/>

            </RelativeLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:id="@+id/reviewsRatingContainer"
                    app:layout_constraintTop_toBottomOf="@+id/detailContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/largeDimen"
                    android:padding="@dimen/largeDimen"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/largeDimen">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/product_opinions"
                        android:textColor="@color/darkGrey"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/largeDimen"
                        android:background="@color/textLight"
                        android:layout_height="2dp">

                </View>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/mediumDimen"
                        android:id="@+id/overallRatiingTV"
                        android:textColor="@android:color/black"
                        android:textSize="34sp"
                        android:layout_gravity="center_horizontal"/>

                <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/starsRatingBarAvg"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="4.5"
                        android:layout_marginTop="@dimen/smallDimen"
                        style="?android:attr/ratingBarStyleSmall"
                        android:theme="@style/RatingBar"
                        android:layout_gravity="center_horizontal"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mediumDimen"
                        android:textSize="12sp"
                        android:textColor="@color/darkGrey"
                        android:id="@+id/reviewsAmountTV"
                        android:layout_gravity="center_horizontal"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xLargeDimen"
                        android:id="@+id/reviewsRV">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/seeAllReviewsContainer"
                android:background="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reviewsRatingContainer"
                android:padding="@dimen/largeDimen"
                android:layout_marginBottom="@dimen/mediumDimen"
                android:layout_marginTop="@dimen/xSmallDimen">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/arrowImageView"
                    android:textColor="@color/altSecondary"
                    android:text="@string/see_all_opinions"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrowImageView"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@null"
                    android:tint="@color/darkGrey"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>